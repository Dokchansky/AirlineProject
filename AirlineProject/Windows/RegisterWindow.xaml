<Window x:Class="AirlineProject.Windows.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AirlineProject.Windows"
        mc:Ignorable="d"
        Title="Регистрация" Height="433" Width="330">
    <Grid>
     
        <StackPanel Width="180" Margin="66,46,65,-46">
            <Label Content="Фамилия"/>
            <TextBox x:Name="user_surname"/>
            <Label Content="Имя"/>
            <TextBox x:Name="user_name"/>
            <Label Content="Отчество"/>
            <TextBox x:Name="user_patronymic"/>
        </StackPanel>
        <StackPanel Margin="66,179,65,-179" Width="180">
            <Label Content="Логин"/>
            <TextBox x:Name="loginbox"/>
        </StackPanel>
        <StackPanel Margin="66,223,65,-223" Width="180">
            <Label Content="Пароль"/>
            <PasswordBox x:Name="passwordbox"/>
        </StackPanel>
        <StackPanel Height="417" VerticalAlignment="Top" Margin="0,293,0,0" >
            <Button x:Name="registerbutton" Click="registerbutton_Click" Content="Регистрация" FontSize="16" FontFamily="Gill Sans Ultra Bold Condensed" Foreground="BlueViolet" Width="160"/>
        </StackPanel>
    </Grid>
</Window>
