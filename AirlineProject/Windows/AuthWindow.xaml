<Window x:Class="AirlineProject.Windows.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AirlineProject.Windows"
        mc:Ignorable="d"
        Title="Окно авторизации" Height="433" Width="311">
    <Grid>
        <StackPanel Height="33" VerticalAlignment="Top"   RenderTransformOrigin="0.454,1.447" Margin="0,226,0,0">
            <Button Content="Авторизация" Click="LoginClick" Height="32" FontSize="16" FontFamily="Gill Sans Ultra Bold Condensed" Foreground="BlueViolet" Width="131"/>
        </StackPanel>
        <StackPanel Height="61" VerticalAlignment="Top" Margin="54,87,54,0"  >
            <Label Content="Логин" Height="33" Width="168"/>
            <TextBox x:Name="loginbox" Height="17" Width="159"/>
        </StackPanel>
        <StackPanel Height="51" VerticalAlignment="Top" Margin="0,153,0,0" >
            <Label Content="Пароль" Height="33" Width="168"/>
            <PasswordBox x:Name="passwordbox" Height="17" Width="159"/>
        </StackPanel>
    </Grid>
</Window>