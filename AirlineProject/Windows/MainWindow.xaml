<Window x:Class="AirlineProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AirlineProject"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Title="Главное меню" Height="450" Width="800">
    <Grid>
        <StackPanel Height="50" VerticalAlignment="Center"  Margin="316,0,316,0">
            <Button Content="Авторизация" Click="LoginClick" Height="32" FontSize="16" FontFamily="Gill Sans Ultra Bold Condensed" Foreground="BlueViolet" Width="131"/>
        </StackPanel>
        <TextBlock Height="50" Width="185" VerticalAlignment="Top"  Margin="308,242,308,0">
            <Hyperlink Click="RegisterClick">
                Первый раз? Зарегистрируйтесь!
            </Hyperlink>
        </TextBlock>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Height="170" Margin="0,9,0,0" Width="212"  >
            <Image Source="image.png" Width="178"/>
        </StackPanel>
    </Grid>
</Window>
