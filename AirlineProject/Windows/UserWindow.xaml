<Window x:Class="AirlineProject.Windows.UserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AirlineProject.Windows"
        mc:Ignorable="d"
        Title="Пользователь" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="330,397,-330,-397">
            <Button x:Name="userbutton" Click="userbutton_Click" Content="Выход" Width="100" FontSize="16" FontFamily="Gill Sans Ultra Bold Condensed" Foreground="BlueViolet"/>
        </StackPanel>
        <StackPanel Margin="-195,180,195,-180">
            <Button x:Name="flight" Click="flight_Click" Content="Рейс" Width="200" FontSize="16" FontFamily="Gill Sans Ultra Bold Condensed" Foreground="BlueViolet"/>
        </StackPanel>
        <StackPanel Margin="195,180,-195,-180">
            <Button x:Name="crew" Click="crew_Click" Content="Экипаж" Width="200" FontSize="16" FontFamily="Gill Sans Ultra Bold Condensed" Foreground="BlueViolet"/>
        </StackPanel>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Height="170" Margin="0,9,0,0" Width="212"  >
            <Image Source="image.png" Width="178"/>
        </StackPanel>
    </Grid>
</Window>
